{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Sid": "VisualEditor0",
          "Effect": "Allow",
          "Action": [
              "lambda:CreateFunction",
              "lambda:TagResource",
              "apigateway:PUT",
              "lambda:GetFunction",
              "lambda:UpdateFunctionConfiguration",
              "lambda:UntagResource",
              "dynamodb:CreateTable",
              "lambda:UpdateFunctionCode",
              "lambda:AddPermission",
              "lambda:ListTags",
              "apigateway:PATCH",
              "lambda:DeleteFunctionConcurrency",
              "apigateway:GET",
              "lambda:GetPolicy"
          ],
          "Resource": [
              "arn:aws:apigateway:us-east-1::/restapis",
              "arn:aws:apigateway:us-east-1::/restapis/*/resources",
              "arn:aws:apigateway:us-east-1::/restapis/*/resources/*",
              "arn:aws:apigateway:us-east-1::/restapis/*",
              "arn:aws:lambda:*:*:function:*",
              "arn:aws:dynamodb:*:*:table/users-*"
          ]
      },
      {
          "Sid": "VisualEditor1",
          "Effect": "Allow",
          "Action": [
              "iam:GetRole",
              "iam:PassRole",
              "iam:DetachRolePolicy",
              "iam:DeleteRolePolicy",
              "iam:AttachRolePolicy",
              "iam:PutRolePolicy"
          ],
          "Resource": "*"
      },
      {
          "Sid": "VisualEditor2",
          "Effect": "Allow",
          "Action": [
              "apigateway:DELETE",
              "dynamodb:DescribeTable"
          ],
          "Resource": [
              "arn:aws:dynamodb:*:*:table/users-*",
              "arn:aws:apigateway:us-east-1::/restapis/*/resources/*"
          ]
      },
      {
          "Sid": "VisualEditor3",
          "Effect": "Allow",
          "Action": "apigateway:POST",
          "Resource": [
              "arn:aws:apigateway:us-east-1::/restapis/*/deployments",
              "arn:aws:apigateway:us-east-1::/restapis/*/resources/*"
          ]
      },
      {
          "Sid": "VisualEditor4",
          "Effect": "Allow",
          "Action": "apigateway:PUT",
          "Resource": [
              "arn:aws:apigateway:us-east-1::/restapis/*/methods/GET",
              "arn:aws:apigateway:us-east-1::/restapis/*/methods/GET/*",
              "arn:aws:apigateway:us-east-1::/restapis/*/methods/POST",
              "arn:aws:apigateway:us-east-1::/restapis/*/methods/POST/*",
              "arn:aws:apigateway:us-east-1::/restapis/*/methods/PUT",
              "arn:aws:apigateway:us-east-1::/restapis/*/methods/PUT/*"
          ]
      }
  ]
}
